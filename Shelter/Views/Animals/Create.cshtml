@{
  Layout = "_Layout";
}

@model Shelter.Models.Animal

<h4>Add a new animal</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Gender)
  @Html.TextBoxFor(model => model.Gender)
  <br>
  @Html.LabelFor(model => model.DateIn)
  @Html.TextBoxFor(model => model.DateIn)
  <br>
  @Html.LabelFor(model => model.Breed)
  @Html.TextBoxFor(model => model.Breed)
  
  <input type="submit" value="Add new animal" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>